<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text_common</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="AppTheme.Regular" parent="AppTheme">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="AppTheme.SemiBold" parent="AppTheme">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="AppTheme.Medium" parent="AppTheme">
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:popupAnimationStyle">@null</item>
        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>


    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <!-- Ustawienie koloru tła na przezroczysty -->
        <item name="itemBackground">@android:color/transparent</item>
        <!-- Inne dostosowania stylu BottomNavigationView, jeśli są potrzebne -->
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="android:Widget.Holo.Light.PopupWindow">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="BottomNavigationItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item> <!-- Opcjonalnie dostosuj rozmiar czcionki -->
    </style>



    <style name="primary_text" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.05</item>

    </style>
    <style name="CustomProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:indeterminateOnly">false</item> <!-- Ustawienie na false, jeśli chcesz kontrolować postęp -->
    </style>


    <style name="HorizontalProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
        <item name="android:progressDrawable">@drawable/horizontal_progress_bar</item>
    </style>

    <style name="CircularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_drawable</item>
    </style>





    <style name="BottomLinearLayout">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">32sp</item>
    </style>

    <style name="Margin">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

    </style>

    <style name="CommonTopMargin">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="paddingForShopItems">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="headlineShopText">
        <item name="android:letterSpacing">0.10</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="buyBtn">
        <item name="backgroundColor">#DCDCDC</item>
        <item name="borderRound">20dp</item>
    </style>


    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>