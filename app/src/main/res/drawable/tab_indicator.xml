<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- Define the appearance of the indicator when the tab is selected -->
            <item android:top="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary_violet" />
                    <size android:height="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>

        <layer-list>
            <!-- Define the appearance of the indicator in the default state -->
            <item android:top="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <size android:height="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
