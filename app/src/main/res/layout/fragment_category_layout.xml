<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/Margin">


            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_a_category"
                style="@style/AppTheme.SemiBold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                >

                <Button
                    android:id="@+id/allFiltr"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:text="@string/all_btn_category"
                    android:textAllCaps="false"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/rounded_rectangle_default"/>

                <Button
                    android:id="@+id/unlockedFiltr"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:text="Unlocked"
                    android:textAllCaps="false"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/rounded_rectangle_default"/>

                <Button
                    android:id="@+id/premiumFiltr"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:text="Premium"
                    android:textAllCaps="false"
                    android:layout_marginRight="32dp"
                    android:background="@drawable/rounded_rectangle_default"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
