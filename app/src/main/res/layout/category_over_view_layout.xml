<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="18dp">

        <ImageButton
            android:id="@+id/subcategoryOverViewGoBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:background="@android:color/transparent"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/subcategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:text="@string/subcategoryName"
            android:textAllCaps="true" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/likeCardSetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/action_btn_state_like" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quotesRc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/setNotificationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_notification" />

    <Button
        android:id="@+id/readCardSetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/read_btn" />

</LinearLayout>