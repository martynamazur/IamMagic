<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/lv_headline"
        android:textSize="12sp"
        android:letterSpacing="0.05"
        app:layout_constraintBaseline_toBaselineOf="@+id/levelTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/levelTopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/level_default"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="190dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/energyLvTopBar"
        app:layout_constraintEnd_toStartOf="@+id/energyLvTopBar"
        app:layout_constraintStart_toEndOf="@+id/levelTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flash" />

    <TextView
        android:id="@+id/energyLvTopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/default_enerygy_number"
        android:textSize="12dp"
        android:letterSpacing="0.05"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"

        app:layout_constraintBaseline_toBaselineOf="@+id/alchemyBottlesTopBar"
        app:layout_constraintEnd_toStartOf="@+id/alchemyBottlesTopBar"
        app:layout_constraintStart_toEndOf="@+id/energyLvTopBar"
        app:srcCompat="@drawable/alchemybottletest" />

    <TextView
        android:id="@+id/alchemyBottlesTopBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/alchemy_points_default"
        android:textSize="12sp"
        android:letterSpacing="0.05"
        app:layout_constraintBaseline_toBaselineOf="@+id/levelTopBar"

        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_marginTop="18dp"
        android:background="@color/item_light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelTopBar" />

</androidx.constraintlayout.widget.ConstraintLayout>