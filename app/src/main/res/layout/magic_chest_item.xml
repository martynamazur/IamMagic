<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"

    android:paddingBottom="18dp"
    android:orientation="vertical"

    android:outlineSpotShadowColor="#B3B3B3"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp"

    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    app:layout_goneMarginBottom="8dp"
    android:layout_marginBottom="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageButton
            android:id="@+id/backgroundIcon"
            android:layout_width="106dp"
            android:layout_height="120dp"
            android:background="@drawable/item_shop_background"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/basicchest" />

        <TextView
            android:id="@+id/chestNameText"
            style="@style/paddingForShopItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TextView" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
