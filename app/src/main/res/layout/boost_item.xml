<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/paddingForShopItems"
        android:background="@drawable/item_shop_background"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"

        android:elevation="28.6dp"
        >

        <ImageView

            android:id="@+id/boostIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/boostbasicicon"
            />

        <TextView
            android:gravity="center"
            android:id="@+id/boostHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:gravity="center"
            android:id="@+id/boostDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <Button
        style="@style/buyBtn"
        android:id="@+id/boostBuyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        />
</LinearLayout>