<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="18dp">

        <ImageButton
            android:id="@+id/goBackNawigationBtnMyCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/textView466"
            android:layout_width="0dp"
            android:layout_height="31dp"
            android:layout_weight="2"
            android:paddingStart="8dp"
            android:text="@string/my_added_cards"
            android:textAllCaps="true" />

        <ImageButton
            android:id="@+id/menuBtnMyCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:contentDescription="@string/menuBtn"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:paddingEnd="8sp"
            android:src="@drawable/threedots"
            tools:ignore="RtlSymmetry" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/item_light_grey" />


   <androidx.fragment.app.FragmentContainerView
       android:id = "@+id/fragmentContainerMyAddedCards"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>
</LinearLayout>