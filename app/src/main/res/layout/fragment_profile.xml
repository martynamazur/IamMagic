<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    tools:context=".nawigation.myprofile.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/profile_xp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="30dp"
                android:layout_marginTop="-30dp"

                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="25dp"
                android:outlineSpotShadowColor="#B3B3B3">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/statisticRc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/statistic_background"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:nestedScrollingEnabled="false"
                    />
            </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    android:outlineSpotShadowColor="#B3B3B3"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp">


                    <Button
                        android:id="@+id/equipmentBtnProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:drawableStart="@drawable/play_icon"
                        android:drawableEnd="@drawable/arrow_right_icon"
                        android:drawablePadding="8dp"

                        android:paddingStart="24dp"
                        android:paddingTop="24sp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="24sp"

                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"

                        android:text="@string/my_equipment"

                        android:outlineSpotShadowColor="#B3B3B3"


                        android:textAllCaps="false"
                        android:gravity="center"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    android:outlineSpotShadowColor="#B3B3B3"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp">


                    <Button
                        android:id="@+id/myCardsProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"


                        android:background="@android:color/transparent"

                        android:drawableStart="@drawable/play_icon"
                        android:drawableEnd="@drawable/arrow_right_icon"
                        android:drawablePadding="8dp"
                        android:outlineSpotShadowColor="#B3B3B3"

                        android:paddingStart="24sp"
                        android:paddingTop="24sp"
                        android:paddingEnd="24sp"

                        android:paddingBottom="24sp"
                        android:text="@string/my_created_cards"
                        android:textAllCaps="false"

                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
